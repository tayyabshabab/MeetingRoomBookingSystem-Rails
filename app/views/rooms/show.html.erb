<% provide(:title, @room.room_no) %>
<h1>Room Details</h1>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Profile</h3>
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <tr>
        <td>Room No: </td>
        <td><%= @room.room_no %></td>
      </tr>
      <tr>
        <td>Building: </td>
        <td><%= @room.building %></td>
      </tr>
      <tr>
        <td>Address: </td>
        <td><%= @room.address %></td>
      </tr>
    </table>
  </div>
</div>