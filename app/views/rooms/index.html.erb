<% provide(:title, "Rooms") %>
<h1>Meeting Rooms</h1>

<% if current_user.admin? %>
  <div align="right"><%= link_to "Create New Room", new_room_path, class: "btn btn-primary" %></div>
<% end %>

<%= will_paginate %>

<table class="table table-hover">
  <tr>
    <th>Room No</th>
    <th>Building</th>
    <th>Address</th>
    <th>Options</th>
  </tr>
  <%= render @rooms %>
</table>